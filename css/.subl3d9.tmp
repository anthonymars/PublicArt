/*  fonts */
@import url(https://fonts.googleapis.com/css?family=Montserrat+Subrayada:400,700|Open+Sans:400,600,700,800,300italic,300|Kaushan+Script);

/* ==========================================================================
   Author's custom styles
   ========================================================================== */
p,
a,
h1,
h2,
h3,
h4, 
body {
	font-family: 'Open Sans', sans-serif;
}

h2,
h3,
h4 {
	font-weight: 600;
}
/***************************** NAVBAR TO TRANSPARENT *******************************/

.navbar {
	background-color: transparent;
	background: transparent;
	border: none;
	color: white;
	z-index: 100;
	margin-bottom: 0;
	border-radius: 0;
	transition: background-color 1s ease 0s; /* Transition effect to make it fade in (optional) */
}

.navbar-default .navbar-brand {
	color: white;
	font-weight: 500;
}

.navbar-default .navbar-brand:hover {
	color: white;
}

.navbar-default .navbar-nav > li > a {
	color: white;
	font-weight: 500;
	font-size: 1em;
	text-transform: lowercase;
	text-shadow: 1px 1px 1px black;
}

.navbar-default .navbar-nav > li > a:hover, .navbar-default .navbar-nav > li > a:active {
  color: white;
 
}
.navbar-default .navbar-nav > li > a:visited, .navbar-default .navbar-nav > li > a:focus {
  color: white;
  text-decoration: none;
}

/* opaque class which will be attached on scroll */

.navbar.opaque {
  background-color: white;
  background: white;
  transition: background-color 1s ease 0s; /* Transition effect to make it fade in (optional) */
  box-shadow: 0px 0px 4px #969696;
}
.navbar.opaque .navbar-brand {
  color: #3b94ff;
  transition: color 1s ease 0s;
}
.navbar.opaque .navbar-nav > li > a {
  color: #969696;
  transition: color 1s ease 0s;
  text-shadow: none;
  font-size: 1em;
}
.navbar.opaque .navbar-nav > li > a:active {
  text-decoration: underline;
}

.navbar-brand {
	color: #1bd645;
	font-family: 'Kaushan Script', cursive;
	font-size: 1.4em;
}

.navbar-default .navbar-brand {
	color: #3b94ff ;
	font-weight: 600;
}





/* full page slide changes  */

/* Centered texts in each section
	* --------------------------------------- */
.section{
	text-align:center;
}


/* Backgrounds will cover all the section
* --------------------------------------- */
#section0,
#section1,
#section2,
#section3,
#slide1,
#slide2,
#slide3{
	background-size: cover;
	background-attachment: no-repeat fixed;
	background-position: 50% 50%;
	border-bottom: 1px solid white;
	
}

/* Defining each sectino background and styles
* --------------------------------------- */
#section0{
	background-image: url(img/bg1.jpg);
	padding: 30% 0 0 0;
}
#section2{
	background-image: url(img/bg2.jpg);
	padding: 6% 0 0 0;
}
#section3{
	background-image: url(img/bg3.jpg);
	padding: 6% 0 0 0;
	color: #fff;
}



	/*Adding background for the slides
* --------------------------------------- */
#slide1{
	background-image: url(../img/bg1.jpg);
	padding: 1% 0 0 0;
}
#slide2{
	background-image: url(../img/bg2.jpg);
	padding: 1% 0 0 0;
}
#slide3{
	background-image: url(../img/bg3.jpg);
	padding: 1% 0 0 0;
}

.slide h1 {
	color: white;
	font-size: 3.1em;
	font-weight: 800;
	font-family: 'Montserrat Subrayada', sans-serif;
	text-shadow: 2px 2px 2px black;
}

.slide h3 {
	color: white;
	font-size: 2.1em;
	font-weight: 800;
	font-family: 'Open Sans', sans-serif;
	text-shadow: 2px 2px 2px black;
	text-transform: uppercase;
}



.slide-logo {
	height: 225px;
	width: 150px;
}

@media screen and (max-width: 450px) {
	.slide-logo {
		display: none;
	}
}


